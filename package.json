{
  "name": "wz-bot",
  "version": "0.1.0",
  "description": "Discord Bot for fetching CoD MW/WZ Stats",
  "repository": {
    "type": "git",
    "url": "https://github.com/diegofigs/wz-bot"
  },
  "main": "index.js",
  "dependencies": {
    "bluebird": "^3.7.2",
    "date-fns": "^2.17.0",
    "discord.js": "^12.5.1",
    "dotenv": "^8.2.0",
    "node-schedule": "^2.0.0",
    "pm2": "^5.2.0",
    "node-fetch": ">=2.6.7",
    "ansi-regex": ">=5.0.1"
  },
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-emoji": "^1.3.1",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.3",
    "mocha": "^9.2.2",
    "sinon": "^13.0.1"
  },
  "scripts": {
    "start": "node -r dotenv/config .",
    "start:schedule": "node -r dotenv/config schedule",
    "test": "mocha --require tests/hooks.js tests",
    "lint": "eslint .",
    "cm": "git-cz",
    "pm2:dev": "pm2-runtime start ecosystem.config.js",
    "pm2:prod": "pm2-runtime start ecosystem.config.js --env production",
    "pm2:deploy": "pm2-runtime deploy ecosystem.config.js production",
    "prepare": "husky install"
  },
  "author": "Diego Figueroa <diego@dfigueroa.me>",
  "license": "ISC",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-emoji"
    }
  }
}
