{
	"extends": [
		"airbnb-base"
	],
	"env": {
		"node": true,
		"es6": true,
		"browser": true,
		"mocha": true
	},
	"globals": {
		"sinon": true
	},
	"parserOptions": {
		"ecmaVersion": 2019
	},
	"rules": {
    "semi": ["error", "always"],
		"comma-dangle": "off"
	},
	"ignorePatterns": ["**/tests/hooks.js"]
}